---
import Brand from './Brand.astro'
import Nav from './Nav.astro'

const { current = '' } = Astro.props;
---

<style>
  header {
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    max-width: 800px;
    padding: 2em;
    margin-top: 3em;
    width: 100%;
  }
</style>

<header>
  <Brand />
  <Nav current={current} />
</header>
